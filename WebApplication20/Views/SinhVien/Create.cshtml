@model WebApplication20.Models.SinhVien

<div class="container">
    <h2>Thêm Sinh Viên Mới</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false)
        </div>
    }

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="MaSV">Mã Sinh Viên</label>
            <input asp-for="MaSV" class="form-control" required />
            <span asp-validation-for="MaSV" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HoTen">Họ Tên</label>
            <input asp-for="HoTen" class="form-control" required />
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GioiTinh">Giới Tính</label>
            <select asp-for="GioiTinh" class="form-control" required>
                <option value="">-- Chọn giới tính --</option>
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
            </select>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NgaySinh">Ngày Sinh</label>
            <input asp-for="NgaySinh" type="date" class="form-control" required />
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MaNganh">Ngành Học</label>
            <select asp-for="MaNganh" class="form-control" asp-items="ViewBag.NganhHocList" required>
                <option value="">-- Chọn ngành học --</option>
            </select>
            <span asp-validation-for="MaNganh" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Hinh">Hình Ảnh</label>
            <input type="file" name="Hinh" class="form-control" accept="image/*" />
            <span asp-validation-for="Hinh" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
